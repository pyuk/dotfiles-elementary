                        , "--normal", "#9fc69f", "--high", "#cc9393"
                        ] 10
                    , Run Swap [] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M" "date" 10
				 	, Run Volume "default" "Master" 
